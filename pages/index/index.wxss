/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.logo {
  display: flex;
  height: 56rpx;
  padding-left: 12rpx;
}

.item {
  display: flex;
  flex-direction: column;
  height: 156rpx;
  padding-left: 30rpx;
  background-color: white;
  border-bottom:1px solid #f1f2f3;
}

.course-desc {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.course-age {
  margin-top: 12rpx;
  margin-right: 12rpx;
  font-size: 12px
}

.container {
  display: flex;
  flex-direction: column;
}

.padding {
  height: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center
}

.list-item {
  height: 96rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f1f2f3;
}

.swpier{  
  height:400rpx;  
  width:100%  
}

.swiper-image {  
  height: 100%;  
  width: 100%;  
}  

.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  flex: 1;
  align-items: center;
}
.navigator-text {
  flex: 1;
  font-size: 32rpx;
}

.navigator-right-text {
  padding-right: 30rpx;
  position: relative;
  font-size: 26rpx;
  color: #888888;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
